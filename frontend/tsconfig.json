{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  
  "compilerOptions": {
    "target": "es6",
    "module": "ES2022", // Must be 'es2020' or higher
    "lib": ["dom", "es2020"],
    "jsx": "react-jsx", // Use 'react-jsx' for the new JSX transform
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node10",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}